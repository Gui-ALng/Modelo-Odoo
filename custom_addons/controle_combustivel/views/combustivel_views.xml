<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fuel_tank_form" model="ir.ui.view">
        <field name="name">fuel.tank.form</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity"/>
                        <field name="current_stock" readonly="1" decoration-danger="current_stock &lt; 500"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fuel_tank_tree" model="ir.ui.view">
        <field name="name">fuel.tank.list</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="capacity"/>
                <field name="current_stock"/>
            </list>
        </field>
    </record>

    <record id="view_fuel_log_tree" model="ir.ui.view">
        <field name="name">fuel.log.list</field>
        <field name="model">fuel.log</field>
        <field name="arch" type="xml">
            <list decoration-info="operation_type == 'in'">
                <field name="date"/>
                <field name="operation_type"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="liters" sum="Total Litros"/>
                <field name="total_amount" sum="Total Valor"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <record id="view_fuel_log_form" model="ir.ui.view">
        <field name="name">fuel.log.form</field>
        <field name="model">fuel.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Dados da Operação">
                            <field name="tank_id"/>
                            <field name="operation_type"/>
                            <field name="date"/>
                        </group>
                        <group string="Veículo e Motorista" invisible="operation_type == 'in'">
                            <field name="vehicle_id" required="operation_type == 'out'"/>
                            <field name="driver_id"/>
                            <field name="odometer"/>
                        </group>
                        <group string="Valores">
                            <field name="liters"/>
                            <field name="price_per_liter"/>
                            <field name="total_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fuel_log" model="ir.actions.act_window">
        <field name="name">Registros de Combustível</field>
        <field name="res_model">fuel.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_fuel_tank" model="ir.actions.act_window">
        <field name="name">Tanques</field>
        <field name="res_model">fuel.tank</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fuel_root" name="Gestão de Combustível" sequence="10"/>
    <menuitem id="menu_fuel_log" name="Abastecimentos" parent="menu_fuel_root" action="action_fuel_log" sequence="1"/>
    <menuitem id="menu_fuel_tank" name="Tanques" parent="menu_fuel_root" action="action_fuel_tank" sequence="2"/>

    <record id="view_purchase_order_form_inherit_fuel" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.fuel</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="fuel_tank_id" placeholder="Selecione se for combustível..."/>
            </field>
        </field>
    </record>
</odoo>